<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sayiGoster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonEsittir"
        app:layout_constraintStart_toEndOf="@+id/buttonTopla"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSifirla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="C"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonYedi"
        app:layout_constraintEnd_toStartOf="@+id/buttonTopla"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sayiGoster" />

    <Button
        android:id="@+id/buttonTopla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSekiz"
        app:layout_constraintEnd_toStartOf="@+id/buttonEsittir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSifirla"
        app:layout_constraintTop_toBottomOf="@+id/sayiGoster" />

    <Button
        android:id="@+id/buttonEsittir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDokuz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonTopla"
        app:layout_constraintTop_toBottomOf="@+id/sayiGoster" />

    <Button
        android:id="@+id/buttonYedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDort"
        app:layout_constraintEnd_toStartOf="@+id/buttonSekiz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSifirla" />

    <Button
        android:id="@+id/buttonDort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBir"
        app:layout_constraintEnd_toStartOf="@+id/buttonBes"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonYedi" />

    <Button
        android:id="@+id/buttonBir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSifir"
        app:layout_constraintEnd_toStartOf="@+id/buttonIki"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDort" />

    <Button
        android:id="@+id/buttonIki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSifir"
        app:layout_constraintEnd_toStartOf="@+id/buttonUc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBir"
        app:layout_constraintTop_toBottomOf="@+id/buttonBes" />

    <Button
        android:id="@+id/buttonUc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSifir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonIki"
        app:layout_constraintTop_toBottomOf="@+id/buttonAlti" />

    <Button
        android:id="@+id/buttonBes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonIki"
        app:layout_constraintEnd_toStartOf="@+id/buttonAlti"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonDort"
        app:layout_constraintTop_toBottomOf="@+id/buttonSekiz" />

    <Button
        android:id="@+id/buttonAlti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonUc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBes"
        app:layout_constraintTop_toBottomOf="@+id/buttonDokuz" />

    <Button
        android:id="@+id/buttonSekiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBes"
        app:layout_constraintEnd_toStartOf="@+id/buttonDokuz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonYedi"
        app:layout_constraintTop_toBottomOf="@+id/buttonTopla" />

    <Button
        android:id="@+id/buttonDokuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="tiklananButton"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAlti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonSekiz"
        app:layout_constraintTop_toBottomOf="@+id/buttonEsittir" />

    <Button
        android:id="@+id/buttonSifir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonUc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/buttonBir"
        app:layout_constraintTop_toBottomOf="@+id/buttonBir"
        android:onClick="tiklananButton" />

    <TextView
        android:id="@+id/sayiCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birinci SayÄ±: "
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/sayiGoster"
        app:layout_constraintStart_toStartOf="@+id/buttonSifirla"
        app:layout_constraintTop_toTopOf="@+id/sayiGoster" />
</androidx.constraintlayout.widget.ConstraintLayout>